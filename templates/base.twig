{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}
	{% set page_type = 'simple-page' %}
	{% if post.get_field('is_member_area_page') == 'true' %}
		{% set page_type = 'member-area-page' %}
	{% endif %}
	<body class="{{body_class}} {{ page_type }}" data-template="base.twig" username="{{ username }}">
		<div class="content-principal">
			<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
			<header class="header" >
				<a href="" class="mobile-menu-link"><i class="fas fa-bars"></i></a>
				{% block header %}
					<div class="wrapper">
						<div class="header-menu">
							<h1 class="hdr-logo" role="banner">
								<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
							</h1>
							<nav id="nav-main" class="nav-main" role="navigation">
								<div class="left-menu">
									{{ function ('print_menu', 2) }}
								</div>
								<div class="right-menu">
									{{ function ('print_menu', 3) }}
								</div>
							</nav><!-- #nav -->
						</div>
					</div>
				{% endblock %}
			</header>

			<section id="content" role="main" class="content-wrapper">
				{% if title %}<h1>{{title}}</h1>{% endif %}
				{#<div class="wrapper {{sidebar_class}}">#}
				{% block content %}
					Sorry, no content
				{% endblock %}
				{#</div>#}
				{% if sidebar %}
					<aside class="layout-sidebar">
						{{sidebar}}
					</aside>
				{% endif %}
			</section>
		</div>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
