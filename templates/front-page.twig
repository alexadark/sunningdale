{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="full-background" style="background: url('{{ post.thumbnail.src }}') no-repeat top center">
				{#<h1 class="article-h1">{{post.title}}</h1>#}
				<div class="article-body">
					<h1>{{ post.ma_title }}</h1>
					<h3>{{ post.ma_subtitle }}</h3>
				</div>
			</section>
			<div class="mobile-only full-image">
				<img src="{{ post.thumbnail.src }}" alt="">
				<div class="heading">
					<h1>{{ post.ma_title }}</h1>
					<h3>{{ post.ma_subtitle }}</h3>
				</div>
			</div>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}